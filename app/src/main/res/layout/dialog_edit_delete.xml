<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_reset">

    <ImageView
        android:id="@+id/line"
        android:layout_width="56dp"
        android:layout_height="3dp"
        android:background="@drawable/bg_dialog_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Choose action"
        android:textColor="#000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line" />


    <ImageView
        android:id="@+id/image1"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="12dp"
        android:src="@drawable/share"
        app:layout_constraintBottom_toBottomOf="@+id/share"
        app:layout_constraintEnd_toStartOf="@id/share"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/share" />

    <TextView
        android:id="@+id/share"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/nunito_extrabold"
        android:gravity="center|start"
        android:text="Share app"
        android:textColor="#000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image1"
        app:layout_constraintTop_toBottomOf="@id/english" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/rate"
        app:layout_constraintBottom_toBottomOf="@+id/rate"
        app:layout_constraintEnd_toStartOf="@id/share"
        android:layout_marginEnd="16dp"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="@id/image1"
        app:layout_constraintTop_toTopOf="@id/rate" />

    <TextView
        android:id="@+id/rate"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nunito_extrabold"
        android:gravity="center|start"
        android:text="Rate app"
        android:textColor="#000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image2"
        app:layout_constraintTop_toBottomOf="@id/share" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/review"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/feedback"
        app:layout_constraintEnd_toStartOf="@id/share"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/feedback" />

    <TextView
        android:id="@+id/feedback"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:gravity="center|start"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/nunito_extrabold"
        android:text="Feedback"
        android:layout_marginTop="8dp"
        android:textColor="#000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image3"
        app:layout_constraintTop_toBottomOf="@id/rate" />

</androidx.constraintlayout.widget.ConstraintLayout>